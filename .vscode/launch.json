
  {
    "version": "0.2.0",
    "configurations": [

      {
        "type": "node",
        "request": "launch",
        "name": "Launch TypeScript Server",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
        "args": ["-P", "${workspaceFolder}/tsconfig.json", "${workspaceFolder}/src/app.ts"], // Ensure it picks up your tsconfig.json
        "outFiles": ["${workspaceFolder}/public/js/**/*.js"],
        "preLaunchTask": "tsc: build - tsconfig.json" // Optional: Compiles your TypeScript before launching
      }
    ]
  }